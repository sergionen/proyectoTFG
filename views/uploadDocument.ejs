<%- include('layout/navbar', {username: username}) %>


<div class="container-fluid">
    <section class="w-100 mt-5 pt-4 d-flex justify-content-center">
        <div class="text-center">
            <h1> Subir documento </h1> 
            <br>
            <p> Selecione un documento para almacenarlo dentro <br>de la red distribuida. </p>
        </div>
    </section>
</div>

<div>
    <section class="w-100 p-4 d-flex justify-content-center">
        <form action="/document/upload" method="post" enctype="multipart/form-data">
            <input class="border" type="file" name="fileToUpload" id="fileToUpload" accept="
            .txt,.doc,.pdf,.zip,.rar,.png,.jpg">
            <p class="text-left clarity">Extensiones: .pdf .doc .zip .rar .txt .png .jpg</p>
            <% if(typeof error != 'undefined' ) { %>
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                  <strong><%=error%></strong> 
                </div>
            <% } %> 
            <div class="text-center">
                <div class="loading loading--full-height"></div>
                <button id="uploadBtn" class="mt-3 btn btn-primary uploadBtn" type="submit"> Subir archivo</button>
            </div>
        </form>
    </section>
</div>

<%- include('layout/footer') %>